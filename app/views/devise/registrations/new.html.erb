<div class="container-fluid"><!--Use .container-fluid for a full width container, spanning the entire width of your viewport.-->    <section class="container"><!--Use .container for a responsive fixed width container.-->        <div class="container-page">             <div class="col-md-4"><!--col-md对应的Container width：970px -->               		    <h3 class="dark-grey"><%=t('.begin')%></h3>                <div class='well'>                  <div class='row'><!--row可以完整的封装内部的div,如果不用，内部的div会超出well-->                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => { :multipart => true }) do |f| %><!--因为和User model建立了联结，这里resource代表@user,:html => { :multipart => true }为了avatar设置-->                    <%= devise_error_messages! %>                    <div class="form-group col-lg-6">                      <%= f.text_field :mobile, class: "form-control", placeholder: "手机", autofocus: true %>                    </div>                    <div class="form-group col-lg-6">                      <%= f.email_field :email, class: "form-control",placeholder: "邮箱" %>                    </div>                    <div class="form-group col-lg-6">		      <%= f.password_field :password, class: "form-control",  placeholder: "密码", autocomplete: "off" %>                    </div>                    <div class="form-group col-lg-6">                      <%= f.password_field :password_confirmation,  class: "form-control", autocomplete: "off",placeholder: "密码确认" %>                    </div>                                        <div class="form-group col-lg-6">                      <%= f.text_field :user_name, class: "form-control",placeholder: "用户名" %>                    </div>                    <div class="form-group col-lg-6">                      <%= f.text_field :true_name, class: "form-control", placeholder: "真实姓名" %>                    </div>                                    <div class="form-group col-lg-6 select ">                      <%= f.select :user_type,["求职者","猎头","人事"] %>                    </div>		    <div class="form-group col-lg-6">		      <%= f.text_field :city, class: "form-control", placeholder: "所在城市" %>		    </div>                    <div class="form-group col-lg-12">                      <%= f.label :照片 %>	<br />                      <%= f.file_field :avatar,class: 'form-control' %>                    </div>                    <div class="form-group col-lg-12 select ">                      <%= f.label :生日 %><br>                      <%= f.date_select :birthday,start_year:1950,end_year:Date.today.year,class: "form-control" %>                    </div>    	                       <div class="form-group col-lg-3 " >                    </div>                		<div class="form-group col-lg-6 " >                			<br />                		  <%= f.submit "注册",class: "btn btn-success btn-block pull-right" %>                		</div>                                    <% end %>                  </div><!--row end-->                </div><!--well end-->            </div><!-- end col-md-4-->            <div class="col-md-6">                <br />                <br />                <br />                <table>                  <tr>                    <td><span class="fa fa-check text-success step_info">&nbsp;&nbsp;</span></td><td class='step_info'>注册基本信息</td>                  </tr>                  <tr>                    <td></td><td class='step_info'>填写个人评价</td>                  </tr>                  <tr>                    <td></td><td class='step_info'>输入工作履历</td>                  </tr>                  <tr>                    <td></td><td class='step_info'>完善教育背景</td>                  </tr>                  <tr>                    <td></td><td class='step_info'>撰写薪资要求</td>                  </tr>                  <tr>                    <td></td><td class='step_info'>完成</td>                  </tr>                </table>                                </div><!--col-md-6 end-->        </div>    </section></div>