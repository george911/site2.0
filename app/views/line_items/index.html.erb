<h1>Listing line_items</h1>

<table>
  <thead>
    <tr>
      <th>Mobile</th>
      <th>Email</th>
      <th>Name</th>
      <th>Title</th>
      <th>Status</th>
      <th>City</th>
      <th>Talent</th>
      <th>User</th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.mobile %></td>
        <td><%= line_item.email %></td>
        <td><%= line_item.name %></td>
        <td><%= line_item.title %></td>
        <td><%= line_item.status %></td>
        <td><%= line_item.city %></td>
        <td><%= line_item.talent_id %></td>
        <td><%= line_item.user %></td>
        <td><%= line_item.job %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

